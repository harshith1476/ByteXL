# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_CONFIG=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/retailer_recommendations
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/retailer_recommendations

# External AI Services (Optional)
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (for n8n workflows)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# API Configuration
API_RATE_LIMIT=100 per hour

# Logging
LOG_LEVEL=INFO

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/retailer-rec-webhook

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
